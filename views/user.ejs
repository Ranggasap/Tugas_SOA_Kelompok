<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Daftar Pengguna</title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <!-- <link rel="stylesheet" href="/css/style.css"> -->

  <style>
    body {
      background-color: #fdfdf9;
    }
    .navbar-custom {
      background-color: #F5F5DC !important;
    }
    .navbar-custom .navbar-brand,
    .navbar-custom .nav-link {
      color: #556B2F !important;
    }
    .navbar-custom .nav-link.text-danger {
      color: #dc3545 !important;
    }
    .header-olive {
      background-color: #556B2F;
      color: white;
    }
    .badge-olive {
      background-color: #556B2F;
      color: white;
    }
    .badge-user {
      background-color: #999999;
      color: white;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-custom py-2" style="font-size: 1.2rem;">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/home_admin" style="font-size: 1.5rem;">
        <i class="bi bi-speedometer2 me-1"></i> Admin Panel
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/produk">
              <i class="bi bi-box-seam me-1"></i> Produk
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user">
              <i class="bi bi-people me-1"></i> User
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-danger" href="/logout">
              <i class="bi bi-box-arrow-right me-1"></i> Logout
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Konten -->
  <div class="container mt-5">
    <div class="card shadow">
      <div class="card-header header-olive">
        <h4 class="mb-0">Daftar Pengguna</h4>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover align-middle text-center">
            <thead style="background-color: #556B2F; color: white;">
              <tr>
                <th>UID</th>
                <th>Nama Lengkap</th>
                <th>Email</th>
                <th>No HP</th>
                <th>Role</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(user => { %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.fullname %></td>
                  <td><%= user.email %></td>
                  <td><%= user.phone %></td>
                  <td>
                    <% if (user.role === 'admin') { %>
                      <span class="badge badge-olive">Admin</span>
                    <% } else { %>
                      <span class="badge badge-user">User</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
