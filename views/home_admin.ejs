<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dashboard Admin</title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <style>
    body {
      background-color: #fdfdf9;
    }
    .navbar-custom {
      background-color: #F5F5DC !important;
    }
    .navbar-custom .navbar-brand,
    .navbar-custom .nav-link {
      color: #556B2F !important;
    }
    .navbar-custom .nav-link.text-danger {
      color: #dc3545 !important;
    }
    .card-header-custom {
      background-color: #556B2F;
      color: #fff;
    }
    .btn-olive {
      background-color: #556B2F;
      color: white;
    }
    .btn-olive:hover {
      background-color: #445522;
      color: white;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-custom py-2" style="font-size: 1.2rem;">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/home_admin" style="font-size: 1.5rem;">
        <i class="bi bi-speedometer2 me-1"></i> Admin Panel
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/produk">
              <i class="bi bi-box-seam me-1"></i> Produk
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user">
              <i class="bi bi-people me-1"></i> User
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-danger" href="/logout">
              <i class="bi bi-box-arrow-right me-1"></i> Logout
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Konten -->
  <div class="container mt-4">
    <div class="mb-4">
      <h2 class="fw-bold" style="color: #556B2F;">Selamat Datang, <%= user.fullname %> ðŸ‘‹</h2>
      <h4 class="text-muted">ðŸ“¦ Total Produk: <%= produk.length %></h4>
    </div>

    <div class="card shadow">
      <div class="card-header card-header-custom">
        <h5 class="mb-0"><i class="bi bi-receipt me-1"></i> Daftar Order Terbaru</h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover text-center align-middle">
            <thead class="table-light">
              <tr>
                <th>Order ID</th>
                <th>Nama User</th>
                <th>Status</th>
                <th>Total Harga</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach((order, index) => { %>
                <tr>
                  <td><%= order.orderId %></td>
                  <td><%= order.userFullName %></td>
                  <td>
                    <form action="/order/status/<%= order.id %>" method="POST">
                      <div class="input-group input-group-sm">
                        <select
                          class="form-select fw-bold
                            <%= order.status === 'Belum Dibuat' ? 'bg-primary text-white' : '' %>
                            <%= order.status === 'Sedang Diproses' ? 'bg-warning text-dark' : '' %>
                            <%= order.status === 'Done' ? 'bg-success text-white' : '' %>"
                          name="status"
                          onchange="this.form.submit()">
                    
                          <option class="bg-primary text-white" value="Belum Dibuat" <%= order.status === 'Belum Dibuat' ? 'selected' : '' %>>
                            Belum Dibuat
                          </option>
                          <option class="bg-warning text-dark" value="Sedang Diproses" <%= order.status === 'Sedang Diproses' ? 'selected' : '' %>>
                            Sedang Diproses
                          </option>
                          <option class="bg-success text-white" value="Done" <%= order.status === 'Done' ? 'selected' : '' %>>
                            Selesai
                          </option>
                    
                        </select>
                      </div>
                    </form>
                    
                  </td>
                  <td>Rp <%= order.total_harga ? order.total_harga.toLocaleString('id-ID') : 0 %></td>
                  <td>
                    <button type="button" class="btn btn-sm btn-olive" data-bs-toggle="modal" data-bs-target="#orderModal<%= index %>">
                      <i class="bi bi-eye"></i> Detail
                    </button>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>

          <!-- Modal Detail -->
          <% orders.forEach((order, index) => { %>
            <div class="modal fade" id="orderModal<%= index %>" tabindex="-1" aria-labelledby="orderModalLabel<%= index %>" aria-hidden="true">
              <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header card-header-custom">
                    <h5 class="modal-title" id="orderModalLabel<%= index %>">Detail Order - <%= order.orderId %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <p><strong>Nama User:</strong> <%= order.userFullName %></p>
                    <p><strong>Total Harga:</strong> Rp <%= order.total_harga ? order.total_harga.toLocaleString('id-ID') : 0 %></p>
                    <p><strong>Status:</strong> <%= order.status %></p>

                    <h6>Produk dalam Order:</h6>
                    <% if (Array.isArray(order.products) && order.products.length > 0) { %>
                      <ul>
                        <% order.products.forEach(p => { %>
                          <li><%= p.name %> Ã— <%= p.quantity %></li>
                        <% }) %>
                      </ul>
                    <% } else { %>
                      <em>Tidak ada produk</em>
                    <% } %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
