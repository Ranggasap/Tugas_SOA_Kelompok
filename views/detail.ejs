<!DOCTYPE html>
<html>
<head>
  <title>Detail Produk</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://www.gstatic.com/firebasejs/10.8.1/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/10.8.1/firebase-auth.js"></script>
  <style>
    .product-img { max-width: 100%; cursor: pointer; border-radius: 8px; }
  </style>
</head>
<body class="container mt-4">

  <!-- Back -->
  <a href="/home" class="btn btn-secondary mb-3">â¬… Kembali</a>

  <!-- Detail Produk -->
  <div class="card p-3">
    <img src="<%= product.image %>" id="productImage" class="product-img mb-3" alt="<%= product.name %>">
    <h3><%= product.name %></h3>
    <p class="text-muted"><%= product.description %></p>
    <h4 class="text-success">Rp <%= product.price %></h4>
    <button class="btn btn-primary mt-3" id="addToCartBtn">Tambahkan ke Keranjang</button>
  </div>

  <!-- Modal Zoom Gambar -->
  <div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <img src="<%= product.image %>" class="img-fluid rounded">
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Firebase setup
    const firebaseConfig = {
      apiKey: "<YOUR_API_KEY>",
      authDomain: "<YOUR_AUTH_DOMAIN>",
      projectId: "<YOUR_PROJECT_ID>",
    };
    firebase.initializeApp(firebaseConfig);
    const auth = firebase.auth();

    // Proteksi login
    auth.onAuthStateChanged(user => {
      if (!user) window.location.href = "/login";
    });

    // Zoom gambar
    document.getElementById("productImage").addEventListener("click", () => {
      new bootstrap.Modal(document.getElementById("imageModal")).show();
    });

    // Tambah ke keranjang (pakai localStorage untuk contoh)
    document.getElementById("addToCartBtn").addEventListener("click", () => {
      const product = {
        name: "<%= product.name %>",
        price: "<%= product.price %>",
        image: "<%= product.image %>"
      };
      let cart = JSON.parse(localStorage.getItem("cart")) || [];
      cart.push(product);
      localStorage.setItem("cart", JSON.stringify(cart));
      alert("Produk ditambahkan ke keranjang!");
      window.location.href = "/cart";
    });
  </script>
</body>
</html>
