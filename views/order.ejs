<table border="1">
    <tr>
      <th>Order ID</th>
      <th>UID</th> <!-- ✅ Tambahkan kolom UID -->
      <th>Nama User</th>
      <th>Nama Produk</th>
      <th>Total Harga</th>
      <th>Status</th>
      <th>Aksi</th>
    </tr>
    <% orders.forEach(order => { %>
      <tr>
        <td><%= order.orderId %></td>
        <td><%= order.uid %></td> <!-- ✅ Tampilkan UID -->
        <td><%= order.userFullName %></td>
        <td>
          <ul>
            <% order.productNames.forEach(nama => { %>
              <li><%= nama %></li>
            <% }) %>
          </ul>
        </td>
        <td>Rp <%= order.total_harga.toLocaleString() %></td>
        <td><%= order.status %></td>
        <td>
          <a href="/order/<%= order.id %>">Detail</a>
        </td>
      </tr>
    <% }) %>
  </table>
  