<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Daftar Produk</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS & Icons -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <!-- <link rel="stylesheet" href="/css/style.css"> -->

  <style>
    body {
      background-color: #fdfdf9;
    }
    .navbar-custom {
      background-color: #F5F5DC !important;
    }
    .navbar-custom .navbar-brand,
    .navbar-custom .nav-link {
      color: #556B2F !important;
    }
    .navbar-custom .nav-link.text-danger {
      color: #dc3545 !important;
    }
    .card-header-custom {
      background-color: #556B2F;
      color: #fff;
    }
    .btn-olive {
      background-color: #556B2F;
      color: white;
    }
    .btn-olive:hover {
      background-color: #445522;
      color: white;
    }
  </style>
</head>
<body>

  <!-- Navbar Admin Panel -->
  <nav class="navbar navbar-expand-lg navbar-custom py-2" style="font-size: 1.2rem;">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/home_admin" style="font-size: 1.5rem;">
        <i class="bi bi-speedometer2 me-1"></i> Admin Panel
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/produk">
              <i class="bi bi-box-seam me-1"></i> Produk
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user">
              <i class="bi bi-people me-1"></i> User
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-danger" href="/logout">
              <i class="bi bi-box-arrow-right me-1"></i> Logout
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Konten Utama -->
  <div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="mb-0" style="color: #556B2F;">Daftar Produk</h1>
      <!-- Tombol trigger modal -->
      <a href="#" class="btn btn-olive" data-bs-toggle="modal" data-bs-target="#modalTambahProduk">
        <i class="bi bi-plus-circle me-1"></i> Tambah Produk
      </a>
    </div>

    <!-- Modal Tambah Produk -->
    <div class="modal fade" id="modalTambahProduk" tabindex="-1" aria-labelledby="modalTambahProdukLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <form action="/produk" method="POST">
            <div class="modal-header">
              <h5 class="modal-title" id="modalTambahProdukLabel">Tambah Produk</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label class="form-label">Nama Produk</label>
                <input type="text" name="nama_produk" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Deskripsi</label>
                <textarea name="Deskripsi" class="form-control" rows="4" required></textarea>
              </div>
              <div class="mb-3">
                <label class="form-label">Harga</label>
                <input type="number" name="Harga" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Gambar (path)</label>
                <input type="text" name="Gambar" class="form-control" placeholder="asset/image/nama.jpg" required>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
              <button type="submit" class="btn btn-olive">Simpan</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Tabel Produk -->
    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle text-center table-olive">
        <thead>
          <tr>
            <th>Nama Produk</th>
            <th>Deskripsi</th>
            <th>Gambar</th>
            <th>Harga</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% produk.forEach(product => { %>
            <tr>
              <td><%= product.id %></td>
              <td><%= product.deskripsi %></td>
              <td>
                <img src="<%= product.image %>" alt="<%= product.nama_produk %>" class="img-thumbnail" style="width: 100px;">
              </td>
              <td>Rp <%= product.price ? product.price.toLocaleString('id-ID') : '0' %></td>
              <td>
                <div class="d-flex justify-content-center gap-2">
                  <a href="/produk/edit/<%= product.id %>" class="btn btn-warning btn-sm">
                    <i class="bi bi-pencil-square"></i> Edit
                  </a>
                  <a href="/produk/delete/<%= product.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Yakin ingin menghapus produk ini?')">
                    <i class="bi bi-trash"></i> Delete
                  </a>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
