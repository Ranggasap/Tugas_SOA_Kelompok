<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Daftar Pengguna</title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <style>
    body {
      background-color: #fdfdf9;
    }
    .navbar-custom {
      background-color: #F5F5DC !important;
    }
    .navbar-custom .navbar-brand,
    .navbar-custom .nav-link {
      color: #556B2F !important;
    }
    .navbar-custom .nav-link.text-danger {
      color: #dc3545 !important;
    }
    .header-olive {
      background-color: #556B2F;
      color: white;
    }
    .badge-olive {
      background-color: #556B2F;
      color: white;
    }
    .badge-user {
      background-color: #999999;
      color: white;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-custom py-2" style="font-size: 1.2rem;">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/home_admin" style="font-size: 1.5rem;">
        <i class="bi bi-speedometer2 me-1"></i> Admin Panel
      </a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/produk"><i class="bi bi-box-seam me-1"></i> Produk</a></li>
          <li class="nav-item"><a class="nav-link" href="/user"><i class="bi bi-people me-1"></i> User</a></li>
          <li class="nav-item"><a class="nav-link text-danger" href="/logout"><i class="bi bi-box-arrow-right me-1"></i> Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Konten -->
  <div class="container mt-5">
    <div class="card shadow">
      <div class="card-header header-olive">
        <h4 class="mb-0"><i class="bi bi-people-fill"></i> Daftar Pengguna</h4>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover align-middle text-center">
            <thead style="background-color: #556B2F; color: white;">
              <tr>
                <th>UID</th>
                <th>Nama Lengkap</th>
                <th>Email</th>
                <th>No HP</th>
                <th>Role</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(user => { %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.fullname || '-' %></td>
                  <td><%= user.email || '-' %></td>
                  <td><%= user.phone || '-' %></td>
                  <td>
                    <% if (user.role === 'admin') { %>
                      <span class="badge badge-olive">Admin</span>
                    <% } else { %>
                      <span class="badge badge-user">User</span>
                    <% } %>
                  </td>
                  <td>
                    <!-- Tombol Ubah Role -->
                    <% if (user.role === 'admin') { %>
                      <button class="btn btn-sm btn-secondary"
                        data-bs-toggle="modal"
                        data-bs-target="#confirmRoleModal"
                        data-userid="<%= user.id %>"
                        data-newrole="user"
                        data-username="<%= user.fullname || user.email %>"
                        data-action="Turunkan ke User">
                        Turunkan ke User
                      </button>
                    <% } else { %>
                      <button class="btn btn-sm btn-success"
                        data-bs-toggle="modal"
                        data-bs-target="#confirmRoleModal"
                        data-userid="<%= user.id %>"
                        data-newrole="admin"
                        data-username="<%= user.fullname || user.email %>"
                        data-action="Jadikan Admin">
                        Jadikan Admin
                      </button>
                    <% } %>

                    <!-- Tombol Hapus -->
                    <button class="btn btn-sm btn-danger ms-2"
                      data-bs-toggle="modal"
                      data-bs-target="#confirmDeleteModal"
                      data-userid="<%= user.id %>"
                      data-username="<%= user.fullname || user.email %>">
                      <i class="bi bi-trash"></i>
                    </button>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Konfirmasi Role -->
  <div class="modal fade" id="confirmRoleModal" tabindex="-1" aria-labelledby="confirmRoleLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmRoleLabel">Konfirmasi Perubahan Role</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p id="confirmRoleText"></p>
        </div>
        <div class="modal-footer">
          <form id="confirmRoleForm" method="POST">
            <input type="hidden" name="newRole" id="newRoleInput">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
            <button type="submit" class="btn btn-primary">Ya, Lanjutkan</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Konfirmasi Hapus -->
  <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmDeleteLabel">Konfirmasi Hapus User</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p id="confirmDeleteText"></p>
        </div>
        <div class="modal-footer">
          <form id="confirmDeleteForm" method="POST">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
            <button type="submit" class="btn btn-danger">Ya, Hapus</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="/js/bootstrap.bundle.min.js"></script>

  <!-- Script Modal -->
  <script>
    // Modal ubah role
    const confirmRoleModal = document.getElementById('confirmRoleModal');
    confirmRoleModal.addEventListener('show.bs.modal', event => {
      const button = event.relatedTarget;
      const userId = button.getAttribute('data-userid');
      const newRole = button.getAttribute('data-newrole');
      const username = button.getAttribute('data-username');
      const actionText = button.getAttribute('data-action');

      document.getElementById('confirmRoleText').textContent =
        `Apakah Anda yakin ingin ${actionText.toLowerCase()} untuk "${username}"?`;

      document.getElementById('confirmRoleForm').action = `/user/${userId}/role`;
      document.getElementById('newRoleInput').value = newRole;
    });

    // Modal hapus user
    const confirmDeleteModal = document.getElementById('confirmDeleteModal');
    confirmDeleteModal.addEventListener('show.bs.modal', event => {
      const button = event.relatedTarget;
      const userId = button.getAttribute('data-userid');
      const username = button.getAttribute('data-username');

      document.getElementById('confirmDeleteText').textContent =
        `Apakah Anda yakin ingin menghapus user "${username}" ini?`;

      document.getElementById('confirmDeleteForm').action = `/user/${userId}/delete`;
    });
  </script>

</body>
</html>
